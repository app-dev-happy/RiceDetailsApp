<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clearance_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/clearance_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/clearance_port_value"
                android:textSize="18sp"
                android:layout_marginRight="@dimen/marg_16"
                android:textColor="@color/black"
                android:fontFamily="@font/regular_work_sans"
                android:text=""/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/clearance_port_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/clearance_port"
                app:layout_constraintBottom_toBottomOf="@+id/clearance_port"
                android:textSize="18sp"
                android:layout_marginRight="@dimen/marg_16"
                android:textColor="@color/green"
                android:fontFamily="@font/regular_work_sans"
                android:text=""/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="0.6dp"
            android:id="@+id/divide_line"
            android:background="@color/grey" />


    </LinearLayout>
</layout>