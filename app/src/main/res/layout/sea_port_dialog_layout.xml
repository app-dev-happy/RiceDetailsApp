<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seaPort_change"
        android:layout_width="match_parent"
        android:background="@drawable/dialog_backgroud_rounded"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/select_seaPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:text="Sea Port"
            app:fontFamily="@font/medium_work_sans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seaPort_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/select_seaPort"
            app:layout_constraintBottom_toTopOf="@+id/seaPort_submit_btn"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/seaPort_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="27dp"
            android:paddingTop="9dp"
            android:paddingRight="27dp"
            android:paddingBottom="9dp"
            android:text="Submit"
            android:background="@drawable/blue_rounded_btn"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/seaPort_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:paddingLeft="27dp"
            android:paddingTop="9dp"
            android:paddingRight="27dp"
            android:paddingBottom="9dp"
            android:text="Cancel"
            android:background="@drawable/white_rounded_btn"
            android:textColor="#214796"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/seaPort_submit_btn"
            app:layout_constraintRight_toLeftOf="@+id/seaPort_submit_btn"
            app:layout_constraintTop_toTopOf="@+id/seaPort_submit_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>